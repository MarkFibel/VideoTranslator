# VideoTranslator Environment Configuration
# Copy this file to .env and update values as needed

###< Настройки проекта 
PROJECT_NAME=VideoTranslator
VERSION=0.1.0
DEBUG=False
SESSIONS_SECRET_KEY=change_me_in_production_please
TEMP_DIR=var/tmp
MAX_FILE_SIZE=10485760
###> Настройки проекта

###< Настройки сессий
# Время жизни сессии (в часах). Для тестирования можно установить дробное значение (например, 0.02 = ~1 минута)
SESSION_LIFETIME_HOURS=12
# Интервал периодической очистки сессий (в минутах)
SESSION_CLEANUP_INTERVAL_MINUTES=5
# Порог GC (legacy, теперь очистка происходит периодически)
SESSION_GC_THRESHOLD=10
###> Настройки сессий

###< Настройки логирования
LOG_LEVEL=INFO
LOG_DIR=var/log
###> Настройки логирования

###< Настройки RabbitMQ
RABBITMQ_HOST="localhost"
RABBITMQ_PORT=5672
RABBITMQ_USER="guest"
RABBITMQ_PASS="guest"
RABBITMQ_VHOST="/"
RABBITMQ_RPC_QUEUE="rpc_requests_queue"
RABBITMQ_REPLY_TO_QUEUE="amq.rabbitmq.reply-to"
RABBITMQ_RECONNECT_DELAY=5
RABBITMQ_MAX_RECONNECT_ATTEMPTS=10
###> Настройки RabbitMQ
